    <select id="selectListByPage" parameterType="com.capinfo.entity.CapCheckBook" resultMap="BaseResultMap">
        SELECT a.*,
        (select b.name from sys_dict_item b where a.check_problem_type is not null and a.check_problem_type !=''and b.id = a.check_problem_type ) as 'checkProblemTypeText',
        (select b.name from sys_dict_item b where a.check_index is not null and a.check_index !=''and b.id = a.check_index ) as 'checkIndexText',
        (select b.name from sys_dict_item b where a.check_content is not null and a.check_content !=''and b.id = a.check_content ) as 'checkContentText'
        from cap_check_book a
        <where>
        1=1
            <if test="checkType!=null and checkType!=''">and check_type = #{checkType,jdbcType=INTEGER}</if>
            <if test="checkProblemType!=null and checkProblemType!=''">and check_problem_type = #{checkProblemType,jdbcType=INTEGER}</if>
            <if test="checkIndex!=null and checkIndex!=''">and check_index = #{checkIndex,jdbcType=INTEGER}</if>
            <if test="checkContent!=null and checkContent!=''">and check_content = #{checkContent,jdbcType=INTEGER}</if>
            <if test="dutyUnit != null and dutyUnit != ''">and duty_unit = #{dutyUnit,jdbcType=VARCHAR}</if>
            <if test="dutyAvenue != null and dutyAvenue != ''">and duty_avenue = #{dutyAvenue,jdbcType=VARCHAR}</if>
            <if test="delFlag != null ">and del_flag = #{delFlag,jdbcType=INTEGER}</if>
            <if test="beginDate != null ">and<![CDATA[   DATE_FORMAT(check_date, '%Y-%m-%d')>=  DATE_FORMAT(#{beginDate}, '%Y-%m-%d') ]]></if>
            <if test="endDate != null ">and<![CDATA[   DATE_FORMAT(check_date, '%Y-%m-%d')<=  DATE_FORMAT(#{endDate}, '%Y-%m-%d') ]]></if>
            <if test="itemTaskId != null and itemTaskId != ''">and item_task_id = #{itemTaskId,jdbcType=VARCHAR}</if>
            <if test="checkPerson != null and checkPerson != ''">and check_person = #{checkPerson,jdbcType=VARCHAR}</if>
            <if test="itemRequirementId != null and itemRequirementId != ''">and item_requirement_id = #{itemRequirementId,jdbcType=VARCHAR}</if>
        </where>
        order by create_date desc
    </select>
